---
import { env } from "@/libs/env";
import { Icon } from "astro-icon/components";
---

<div class="grid min-h-screen grid-cols-[100%] grid-rows-[auto_1fr]">
  <header class="mx-auto flex w-full max-w-6xl justify-between p-4">
    <a href="/" class="flex items-center gap-1">
      <Icon name="mdi:eye-off" class="text-2xl" />
      <div class="text-xl font-extrabold">
        <span class="hidden sm:inline">Zenn Private </span>
        <span>Preview</span>
      </div>
    </a>
    <a
      href={env.ZENN_GITHUB_REPOSITORY_URL}
      class="flex items-center gap-1 rounded-full border p-1 px-3 aria-disabled:select-none aria-disabled:opacity-60 aria-[disabled=false]:hover:bg-gray-100"
      aria-disabled={env.ZENN_GITHUB_REPOSITORY_URL === "" ? "false" : "true"}
    >
      <Icon name="simple-icons:github" />
      <span class="">GitHubで開く</span>
    </a>
  </header>
  <main>
    <slot />
  </main>
</div>
